<UserControl x:Class="GameOfSumPhone.PlayerEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="50" Width="300">

    <Grid x:Name="root_grid">
        <TextBlock x:Name="name_block" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Player" VerticalAlignment="Center" Margin="10" Foreground="Gray" FontFamily="Trebuchet MS" FontSize="30"/>
        <TextBlock x:Name="score_block" HorizontalAlignment="Right" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Margin="10" Foreground="Gray" FontFamily="Trebuchet MS" FontSize="30"/>
    </Grid>
</UserControl>