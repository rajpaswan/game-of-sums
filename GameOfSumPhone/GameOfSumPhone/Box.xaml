<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:ec="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions" x:Class="GameOfSumPhone.Box"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{x:Null}"
    d:DesignHeight="480" d:DesignWidth="480" Width="70" Height="70">
    
	<Grid x:Name="grid" Background="Transparent">

		<Border x:Name="border" Margin="2" BorderBrush="Gray" BorderThickness="2" CornerRadius="4">
            <TextBlock x:Name="textblock" TextWrapping="Wrap" FontSize="36" Foreground="#FF707070" Text="1" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS"/>
        </Border>

    </Grid>
</UserControl>