<UserControl x:Class="GameOfSumPhone.InfoBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Width="100" Height="100">
    <Grid>
        <TextBlock x:Name="data_block" TextWrapping="Wrap" FontSize="48" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Trebuchet MS" Margin="0,0,0,20"/>
        <TextBlock x:Name="info_block" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" FontSize="16" TextAlignment="Center" Text="info" FontFamily="Trebuchet MS" Margin="10"/>
    </Grid>
</UserControl>